/* Primary style sheet. */

* {margin:0px; padding:0px}

/* Page body */
body {
  margin:0px;
  padding:0px; 
  background:#000000;
  position:relative;
  font-family: Verdana, Arial, Helvetica, sans-serif;
  font-size: 12px;
  text-align:center;
}


/* Tag defaults
----------------------------------------------- */
a {
  padding: 0px;
  color: #99b6c4;
  text-decoration:none;
}
a:active {
  border:0px;
}
a:hover {
  text-decoration:underline;
}
a img {
  border-width:0;
}
img {
  display:block;
  border:0px
}
h1 { 
  font-family: "Trebuchet MS";
  font-size:20px;
  font-weight:bold;
  padding: 0px 0px 0px 4px;
  color:#c1c1c1;
}
h2 { 
  font-family: "Trebuchet MS";
  font-size:16px;
  font-weight:bold;
  color:#c1c1c1;
}
h3 { 
  font-variant: small-caps;
  margin: 0px;
  font-family: "Trebuchet MS";
  font-size:14px;
  font-weight:bold;
  color:#c1c1c1;
}
strong { 
  display: inline;
  font-size: 10px;
  color: #FF9900;
  font-style: italic;
  font-weight: normal;
  margin-bottom: 2px;
  margin-left: 4px;
  margin-right: 2px;
  margin-top: 0px;
}
fieldset {
  height: 100%;
  border-width: 1px;
  border-style: solid;
  border-color: #212527;
}
code { 
  font-family: Verdana, Arial, Helvetica, sans-serif;
  font-size: 10px;
  display: inline;
}
legend { 
  margin-left: 4px;
  background-color:#2d3234;
}
legend font { 
  padding: 0px 0px 0px 4px;
  font-variant: small-caps;
  font-family: "Trebuchet MS";
  font-size:14px;
  font-weight:bold;
  color:#c1c1c1;
  display: inline;
  text-align:left;
}
legend a {
  font-family: Verdana, Arial, Helvetica, sans-serif;
  font-size: 9px;
  margin: 0px 2px 0px 2px;
} 
legend code {
  color:#868f92; 
  margin: 0px 3px 0px 0px;
} 
strike { 
  text-decoration:none;
}


/* Base elements
----------------------------------------------- */

/* Container for the entire page. */
#all {
  background-color:#383e41;
  color:#868f92;
  position:relative;
  margin:0 auto;
  width:1000px;
  overflow:visible;
  display:block;
}

/* Title container. TODO: fix fonts */
#top {
  width:1000px;
  display:block;
  text-align:left;
}
#top h1 {
  padding:50px 0px 30px 4px;
  font-size:25px;
  font-weight:normal;
  color:#c1c1c1;
  text-transform:none;
}
#top a {
  text-decoration:none;
}
#top a:hover {
  text-decoration:none;
}

/* Used for "Beta" label */
#top em { 
  display: inline;
  margin: 0px 2px 0px 2px;
  font-size: 12px;
  vertical-align: top;
  color: #FFC300;
  font-weight: normal;
  font-style: normal;
}

/* For "NEW" etc */
em { 
  display: inline;
  margin: 0px 2px 0px 2px;
  font-size: 12px;
  vertical-align: super;
  color: #FFC300;
  font-weight: normal;
  font-style: normal;
}

/* Container for main content area. */
#main {
  display: block; 
  width: 1000px;
  overflow: visible;
}

/* Container for all content under the title, inc. menu*/
#content {
  position:relative;
  margin:0px 0px 10px 0px;
  text-align:left;
  width:1000px;
  overflow:visible;
  float: left;
}


/* Container for the footer. */
#footer {
  width: 1000px;
  color:#6e777a;
  text-align:center;
  font-size:11px;
  margin-top:10px;
}
#footer a {
  text-decoration:underline;
}
#footer a:hover {
  text-decoration:none;
}
#footer p { 
  padding: 0px 0px 10px 0px;
}


/* Error Div */
#error {
  display: block; 
  overflow: visible;
  padding: 10px;
}
#error table { 
  margin:0 auto;
}
#error td { 
  padding:10px;
  float: none;
  display: block;
  border: 1px solid #FF9900;
  color:#FF9900;
  overflow:hidden;
  text-align:center;
  vertical-align: middle;
  margin-bottom: 5px;
  font-family: Verdana, Arial, Helvetica, sans-serif;
  font-size: 13px;
  font-weight:700;
  text-align:center;
}

/* Menu
----------------------------------------------*/

/* Container for the menu. */
#menubar {
}
/* Menu style. */
#menu {
  background:url(http://static.macroexplain.com/menu_bg.gif);
  list-style:none;
  position:relative;
  width:1000px;
  height:32px;
  margin-bottom:10px;
}
#menu ul li {
  padding:2px 21px 2px 10px;
  position:relative;
  top:5px;
  display:block;
  float:left;
  font-size:14px;
  font-weight:normal;
  color:#C0C0C0;
}
#menu ul li a {
  color:#FFFFFF;
}
#menu ul li a:hover {
  text-decoration:underline
}
#menu input { 
  display: inline;
}

/* For "NEW" etc */
#menu em { 
  font-size: 11px;
  margin: 0px;
  vertical-align: top;
  color: #FFC300;
  font-weight: normal;
  font-style: normal;
}


/*
 Styles for the keybinds.
-------------------------------------------------- */

#container { 
  position: relative;
  padding: 4px;
  display: block;
  margin:0 auto;
  height: 250px;
  width: 1000px;
  font-family:Verdana,sans-serif;
  font-size:10px;
  color:#86adbf;
  text-align:center;
  vertical-align: middle;
}

#keyboard div { 
  float: left;
  display: block;
  vertical-align: middle;
  position: absolute;
  background-color:#282d2f;
  overflow: hidden;
  border-color:#CCCCCC #777777 #777777 #CCCCCC;
  border-style:solid;
  border-width:1px;
}

#mouse div { 
  float: left;
  display: block;
  vertical-align: middle;
  position: absolute;
  background-color:#282d2f;
  overflow: hidden;
  border-color:#CCCCCC #777777 #777777 #CCCCCC;
  border-style:solid;
  border-width:1px;
}




/*
 Style the hover div (background).
-------------------------------------------------- */
.key-hover { 
  position:absolute;
  background-color:#111122;
  float:left;
  padding:4px;
  z-index:65000;
  text-align:left;
  border-color:#CCCCCC #777777 #777777 #CCCCCC;
  border-style:solid;
  border-width:1px;
}

/*
 Style the tooltip table
*/
.key-hover .tt_table { 
  border-width:0px;
  font-family:Verdana,sans-serif;
  font-size:11px;
  text-align:left;
  color:#FFFFFF;
}

.key-hover .tt_table td { 
  padding: 2px;
  vertical-align: middle;
}
.key-hover .tt_table td a { 
  color:#86adbf;
}


/* About, tools, and link page CSS  */
/* Divide up the page divs
----------------------------------------------- */

#about_main {
  padding:0px 4px 0px 4px;
  width:758px;
  float:left;
  overflow: hidden;
}
#about_menu {
  width:230px;
  float:right;
  display: block;
  overflow:hidden;
}

/* About_main classes
----------------------------------------------- */
#about_main .about {
  margin:10px 0px 10px 0px;
  padding:2px;
  float: left;
  display: block;
  border: 1px solid #282d2f;
  background-color:#2d3234;
  overflow:hidden;
  width: 750px;
}

#about_main .about-body pre {
  margin:10px;
  padding:2px;
  display: block;
  background-color:#000000;
}

#about_main .about-body .button {
  display: inline;
}
#about_main .about-body .token  { 

}
#about_main .about-body .token_error  { 
  background-color: #FFF000;
}
#about_main .about-body .wowhead { 
  color:#86adbf;
  font-weight: bold;
}
#about_main .about-body h3 {
  margin:20px 0px 0px 0px;
}
#about_main .about-body p {
  margin:10px 0px 10px 0px;
  display: block;
}
#about_main .link-body p {
  margin:0px 0px 10px 0px;
  display: block;
}
#about_main .link-body a {
  margin:10px 0px 0px 0px;
  display: block;
}
#about_main .about-title {
  text-align: left;
  display: block;
  position: relative;
  background-color: #212527;
}

#about_main .about-title a {
  text-decoration:none;
}

#about_main .about-title em {
  padding-left:2px;
}

#about_main .about-title a:hover {
  color:#fff;
  }

#about_main .about-title h1 {
  padding: 0px 0px 0px 0px;
}

#about_main .about div {
  margin:0 0 .75em;
  line-height:1.4em;
  }


/* About_menu classes
----------------------------------------------- */
#about_menu .box {
  float: right;
  width: 220px;
  padding:2px;
  display: block;
  border: 1px solid #282d2f;
  background-color:#2d3234;
  overflow:hidden;
  margin:10px 4px 10px 0px;
}

#about_menu .box-title {
  width:218px;
  text-align: left;
  display: block;
  position: relative;
  background-color: #212527;
}


#about_menu h1 {
  padding: 0px 0px 0px 2px;
}

#about_menu ul {
  list-style:none;
}
#about_menu li {
  margin:10px 0px 10px 0px;
  }
#about_menu p {
  margin:10px 0px 10px 0px;
  line-height:1.5em;
  }

/* For "NEW" etc */
#about_menu em { 
  display: inline;
  font-size: 11px;
  vertical-align: super;
  color: #FFC300;
  font-weight: normal;
  font-style: normal;
}
